/*
 * Automatic software update for U-Boot
 */

/dts-v1/;

/ {
	description = "Upgrade Image";
	#address-cells = <1>;

	images {
		script@1 {
			data = /incbin/("vf_hmupdate.img");
			type = "script";
			compression = "none";
			os = "linux";
			arch = "arm";
			hash@1 {
				algo = "sha1";
			};
		};
	};
	configurations {
		default = "conf@1";
		conf@1 {
			script = "script@1";
			signature@1 {
				algo = "sha1,rsa2048";
				key-name-hint = "dev";
				sign-images = "script";
			};
		};
	};
};
